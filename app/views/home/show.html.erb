<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <h1 class="text-4xl font-bold mb-4"><%= @region.titleize %> Muscles</h1>
  <p class="text-xl text-gray-600 mb-8">Select a muscle to learn more</p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full max-w-4xl px-4">
    <% @muscles.each do |muscle| %>
      <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
        <h2 class="text-2xl font-semibold text-center"><%= muscle %></h2>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= link_to "Back to Areas", root_path, class: "bg-black text-white px-6 py-3 rounded-lg hover:shadow-lg transition-all duration-300" %>
  </div>
</div> 